# basic image
FROM ubuntu
# author
MAINTAINER googlethink "goooglethink@gmail.com"
# reference run command
RUN apt-get update \
    && apt-get install aptitude -y \
    && apt-get clean \
    && apt-get autoclean \
    && apt-get autoremove \
    && rm -rf /var/lib/apt/lists/* 
# ports
EXPOSE 123 321 233
#mount volume
VOLUME ["date/volume"]
COPY ./code/ /date/volume/


